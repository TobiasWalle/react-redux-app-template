{
  "extends": [
    "tslint-react"
  ],
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "no-invalid-this": true,
    "no-shadowed-variable": true,
    "no-conditional-assignment": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-misused-new": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-string-throw": true,
    "no-var-keyword": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "radix": true,
    "typeof-compare": true,
    "use-isnan": true,
    "no-default-export": true,
    "prefer-const": true,
    "max-line-length": [
      true,
      140
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "array-type": [
      true,
      "array"
    ],
    "arrow-return-shorthand": [
      true
    ],
    "new-parens": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "jsdoc-format": true,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": true,
    "no-unnecessary-initializer": true,
    "object-literal-key-quotes": "consistent-as-needed",
    "object-literal-shorthand": true,
    "member-ordering": [
      true,
      {
        "order": [
          "private-static-field",
          "protected-static-field",
          "public-static-field",
          "private-static-method",
          "protected-static-method",
          "public-static-method",
          "private-instance-field",
          "protected-instance-field",
          "public-instance-field",
          "private-constructor",
          "protected-constructor",
          "public-constructor",
          "private-instance-method",
          "protected-instance-method",
          "public-instance-method"
        ]
      }
    ],
    "no-reference": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "jsx-alignment": true,
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false
  }
}