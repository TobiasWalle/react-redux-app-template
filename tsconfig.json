{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@src/*": [ "*" ],
      "@app/*": [ "app/*" ],
      "@modules/*": [ "app/modules/*" ],
      "@api/*": [ "api/*" ]
    },
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "forkChecker": true,
    "useWebpackText": true,
    "doTypeCheck": true,
    "useTranspileModule": true,
    "useBabel": true,
    "useCache": true
  }
}
