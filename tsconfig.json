{
  "compilerOptions": {
    "outDir": "./dist/server",
    "typeRoots": ["./node_modules/@types"],
    "lib": [
      "es2015",
      "es2015.iterable",
      "dom"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "forkChecker": true,
    "useWebpackText": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
