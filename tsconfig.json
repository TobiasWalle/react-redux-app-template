{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@modules/*": ["app/modules/*"],
      "@api/*": ["api/*"]
    },
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "pretty": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "forkChecker": true,
    "useWebpackText": true,
    "doTypeCheck": true,
    "useTranspileModule": true,
    "useBabel": true,
    "useCache": true
  }
}
