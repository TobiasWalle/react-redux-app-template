{
  "compilerOptions": {
    "outDir": "./dist/server",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "forkChecker": true,
    "useWebpackText": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
