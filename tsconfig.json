{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/server",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/@types/*"
      ]
    },
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "pretty": true
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "forkChecker": true,
    "useBabel": true,
    "useCache": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
