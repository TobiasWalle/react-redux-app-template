{
  "name": "react-redux-app",
  "version": "1.0.0",
  "description": "My first react app with redux. Following the tutorial on https://medium.com/@rajaraodv/step-by-step-guide-to-building-react-redux-apps-using-mocks-48ca0f47f9a#.loitituz1",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start:dev\" \"npm run watch:server:dev\"",
    "start:dev": "bnr start:dev",
    "start:prod": "bnr start:prod",

    "build:server:dev": "webpack --config ./webpack/webpack.server.config.development.js",
    "build:server:prod": "webpack --config ./webpack/webpack.server.config.production.js",
    "build:client:dev": "webpack --config ./webpack/webpack.client.config.development.js",
    "build:client:prod": "webpack --config ./webpack/webpack.client.config.production.js",

    "watch:server:dev": "webpack --config ./webpack/webpack.server.config.development.js --watch",
    "watch:server:prod": "webpack --config ./webpack/webpack.server.config.production.js --watch",
    "watch:client:dev": "webpack --config ./webpack/webpack.client.config.development.js --watch",
    "watch:client:prod": "webpack --config ./webpack/webpack.client.config.production.js --watch",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start:prod": {
      "command": "concurrently \"npm run build:server:prod\" \"npm run build:client:prod\" && nodemon ./dist/server/server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "concurrently \"npm run build:server:dev\" \"npm run build:client:dev\" && nodemon ./dist/server/server.js"
    }
  },
  "author": "Tobias Walle",
  "license": "ISC",
  "devDependencies": {
    "@types/classnames": "0.0.32",
    "@types/express": "^4.0.34",
    "@types/node": "^7.0.0",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^0.14.20",
    "@types/react-redux": "^4.4.35",
    "@types/react-router": "^2.0.45",
    "@types/webpack": "^2.2.0",
    "@types/webpack-dev-server": "^1.12.5",
    "autoprefixer": "^6.6.1",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "better-npm-run": "0.0.14",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "postcss-loader": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.3.1",
    "sass-loader": "^4.1.1",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.13.1",
    "typescript": "^2.1.5",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "http-proxy": "^1.16.2",
    "node-sass": "^4.3.0",
    "normalize-scss": "^6.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0"
  }
}
